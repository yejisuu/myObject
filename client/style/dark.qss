    background-color: rgba(255, 255, 255, 60);
    border: 1px solid rgba(255, 255, 255, 80);
}


QComboBox::drop-down {
    border: none;
    width: 20px;
}
QComboBox::down-arrow {
    image: url(:/image/image/dropdown.png);
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    margin-right: 5px;
    width: 20px;
    height: 20px;
}

QComboBox QAbstractItemView {
    /* 背景：必须是深色，这里不能太透，否则会看见下面的字，这就乱了 */
    /* 推荐用纯黑或极深灰色，带一点点透即可 */
    background-color: rgba(30, 36, 39, 200);

    /* 边框 */
    border: 1px solid #eeeeee;
    border-radius: 0px 0px 6px 6px; /* 下方圆角 */

    /* 字体 */
    color: #dddddd;
    selection-background-color: rgba(64, 158, 255, 100); /* 选中项背景 */
    selection-color: white;                               /* 选中项文字 */
    outline: none; /* 去掉虚线框 */
}

/* 列表项的高度和样式 */
QComboBox QAbstractItemView::item {
    height: 25px; /* 让选项高一点，好点 */
    color: #dddddd;
    border-radius: 4px;
    padding-left: 5px;
}

/* 鼠标滑过某一项 */
QComboBox QAbstractItemView::item:hover {
    background-color: rgba(255, 255, 255, 60);
    color: white;
}

